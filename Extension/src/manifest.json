{
  "manifest_version": 3,
  "name": "NakedPolicy",
  "version": "1.0.0",
  "description": "Simplify privacy policies with AI-powered summaries",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:5000/*", "http://localhost:5173/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
